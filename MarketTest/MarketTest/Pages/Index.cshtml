@page "{category=}/{name=}"
@model MarketTest.Pages.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Products[0].Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products[0].Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products[0].Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Products[0].Category)
        </th>
        <th>         
            Price excl. VAT
        </th>
        <th>
            Price incl. VAT
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td style="width: 300px">
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @{ var newPrice = item.Price * Model.VAT; }
            @Html.DisplayFor(modelItem => newPrice)
        </td>
        <td>
            <a asp-page="./Edit" asp-route-id="@item.Code">Edit</a> |
            <a asp-page="./Details" asp-route-id="@item.Code">Details</a> |
            <a asp-page="./Delete" asp-route-id="@item.Code">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
